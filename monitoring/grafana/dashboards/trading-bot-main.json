{
  "dashboard": {
    "title": "Trading Bot - Main Dashboard",
    "tags": ["trading", "production", "main"],
    "timezone": "America/Sao_Paulo",
    "refresh": "10s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "ðŸŽ¯ Trading Performance - Real Time",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "trading_bot_total_pnl",
            "legendFormat": "Total P&L ($)"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "unit": "currencyUSD"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "ðŸ“Š Win Rate",
        "type": "gauge",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "trading_bot_win_rate_pct",
            "legendFormat": "Win Rate %"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 60, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "ðŸ§  ML Model Accuracy",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "ml_model_accuracy * 100",
            "legendFormat": "Accuracy %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 60, "color": "yellow"},
                {"value": 70, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "âš ï¸ Max Drawdown",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "trading_bot_max_drawdown_pct",
            "legendFormat": "Max Drawdown %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 15, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "ðŸ“ˆ P&L Over Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "trading_bot_total_pnl",
            "legendFormat": "Total P&L"
          },
          {
            "expr": "trading_bot_current_capital",
            "legendFormat": "Current Capital"
          }
        ],
        "yaxes": [
          {"format": "currencyUSD", "label": "USD"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "min": true
        }
      },
      {
        "id": 6,
        "title": "ðŸŽ² Trade Distribution (Win/Loss)",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 4, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "trading_bot_winning_trades",
            "legendFormat": "Winning Trades"
          },
          {
            "expr": "trading_bot_losing_trades",
            "legendFormat": "Losing Trades"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 7,
        "title": "ðŸ“Š Sharpe Ratio",
        "type": "stat",
        "gridPos": {"x": 18, "y": 4, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "trading_bot_sharpe_ratio",
            "legendFormat": "Sharpe Ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1.0, "color": "yellow"},
                {"value": 1.5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "ðŸ’° Profit Factor",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "trading_bot_profit_factor",
            "legendFormat": "Profit Factor"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1.0, "color": "yellow"},
                {"value": 1.5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "ðŸš€ Active Positions",
        "type": "table",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "trading_bot_active_positions",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "symbol": 0,
                "direction": 1,
                "entry_price": 2,
                "current_price": 3,
                "pnl": 4,
                "pnl_pct": 5
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "title": "ðŸ¤– ML Predictions per Hour",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(ml_predictions_total[1h])",
            "legendFormat": "Predictions/hour"
          },
          {
            "expr": "rate(ml_predictions_executed[1h])",
            "legendFormat": "Executed/hour"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "âš™ï¸ System Health - CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 18, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %", "max": 100},
          {"format": "short"}
        ],
        "alert": {
          "name": "High CPU Usage",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [80]},
              "query": {"params": ["A", "5m", "now"]}
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "notifications": []
        }
      },
      {
        "id": 12,
        "title": "ðŸ’¾ Memory Usage",
        "type": "graph",
        "gridPos": {"x": 8, "y": 18, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)"
          }
        ],
        "yaxes": [
          {"format": "mbytes", "label": "MB"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "ðŸŒ API Latency",
        "type": "graph",
        "gridPos": {"x": 16, "y": 18, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Latency"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 Latency"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High API Latency",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [0.5]},
              "query": {"params": ["A", "5m", "now"]}
            }
          ],
          "frequency": "60s",
          "handler": 1
        }
      },
      {
        "id": 14,
        "title": "ðŸ”¥ Recent Trades (Last 24h)",
        "type": "table",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "trading_bot_trades",
            "format": "table",
            "instant": false,
            "range": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "timestamp": 0,
                "symbol": 1,
                "direction": 2,
                "entry_price": 3,
                "exit_price": 4,
                "pnl": 5,
                "pnl_pct": 6,
                "ml_confidence": 7
              }
            }
          }
        ]
      },
      {
        "id": 15,
        "title": "ðŸ› Bugs & Errors (Last 7 days)",
        "type": "logs",
        "gridPos": {"x": 0, "y": 32, "w": 24, "h": 6},
        "targets": [
          {
            "expr": "{job=\"trading-bot\"} |= \"ERROR\" or \"BUG\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "wrapLogMessage": true
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(trading_bot_build_info[5m]) > 0",
          "iconColor": "blue",
          "tagKeys": "version"
        },
        {
          "name": "Alerts Fired",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "symbol",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(trading_bot_trades, symbol)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        },
        {
          "name": "interval",
          "type": "interval",
          "options": ["1m", "5m", "15m", "30m", "1h", "6h", "12h", "1d"],
          "auto": true,
          "auto_count": 30,
          "auto_min": "10s"
        }
      ]
    }
  }
}
